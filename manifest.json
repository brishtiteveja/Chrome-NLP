{
  "manifest_version": 2,
  "name": "Chrome NLP",
  "description": "This extension processes natural languages",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
   },

  "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "permissions": [
      "activeTab",
      "tabs",
      "http://*/*", "https://*/*",
      "https://ajax.googleapis.com/"
  ]
}

